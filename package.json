{
  "name": "majinbuu",
  "version": "1.0.0",
  "description": "coming soon",
  "main": "index.m.js",
  "scripts": {
    "babel": "babel ./index.js --out-file ./index.c.js --presets=es2015",
    "cjs": "npm run babel && echo 'try { module.exports = majinbuu; } catch(e) {}' >> index.c.js",
    "esm": "cp index.js index.m.js && echo 'export default majinbuu;' >> index.m.js",
    "levenstein": "gcc levenstein.c -O3 -o levenstein",
    "build": "npm run esm && npm run cjs && npm run minify && npm test && npm run size",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "minify": "uglifyjs index.c.js --comments=/^!/ --compress --mangle -o min.js && sed -i 's/global/window/' min.js",
    "size": "cat index.js | wc -c;cat min.js | wc -c;gzip -c min.js | wc -c",
    "test": "istanbul cover test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WebReflection/majinbuu.git"
  },
  "keywords": [
    "morph",
    "mutate",
    "transform",
    "array",
    "levenshtein"
  ],
  "author": "Andrea Giammarchi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/WebReflection/majinbuu/issues"
  },
  "homepage": "https://github.com/WebReflection/majinbuu#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "coveralls": "^2.13.1",
    "istanbul": "^0.4.5",
    "tressa": "^0.3.1",
    "uglify-es": "^3.1.3"
  }
}
